<?xml version="1.0" encoding="utf-8" ?>
<toolkit:Popup 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
    x:Class="Real_Time_SMS_App.QRPopupPage"
    BackgroundColor="#99000000">

    <Border BackgroundColor="White" Padding="10" Stroke="Gray" StrokeThickness="1" 
            HorizontalOptions="Center" VerticalOptions="Center" 
            StrokeShape="RoundRectangle 16">

        <VerticalStackLayout Spacing="10" HorizontalOptions="Center" VerticalOptions="Center">
            <Image x:Name="PopupImage" HeightRequest="300" WidthRequest="300" Aspect="AspectFit" />
            <Button Text="Close" Clicked="Close_Clicked" />
        </VerticalStackLayout>

    </Border>
</toolkit:Popup>
